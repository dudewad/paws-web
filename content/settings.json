{
    "build": {
        "devServer": {
            "host": "0.0.0.0",
            "port": 3000
        },
        "outputBase": {
            "prod": "../dist/prod",
            "staging": "../dist/staging"
        }
    },
    "font": [
        {
            "name": "siteIcon",
            "generated": true,
            "type": "webfont",
            "formats": [
                {
                    "name": "eot",
                    "extension": "eot"
                },
                {
                    "name": "truetype",
                    "extension": "ttf"
                },
                {
                    "name": "woff",
                    "extension": "woff"
                }
            ],
            "weight": "normal",
            "style": "normal"
        },
        {
            "name": "serifa",
            "type": "webfont",
            "formats": [
                {
                    "name": "truetype",
                    "extension": "ttf"
                },
                {
                    "name": "woff",
                    "extension": "woff"
                }
            ],
            "weight": "normal",
            "style": "normal"
        },
        {
            "name": "tofino",
            "type": "webfont",
            "formats": [
                {
                    "name": "truetype",
                    "extension": "ttf"
                },
                {
                    "name": "woff",
                    "extension": "woff"
                }
            ],
            "weight": "normal",
            "style": "normal"
        }
    ],
    "style": {
        "overridesBaseDir": "resources/style",
        "overridesEntryPoint": "custom.scss"
    },
    "url": {
        "dev": {
            "dataRoot": "/resources/site-data/",
            "contentRoot": "/resources/asset/"
        },
        "staging": {
            "dataRoot": "//staging.pawsforabeer.com/site-data/",
            "contentRoot": "//pawsforabeer.com/asset"
        },
        "prod": {
            "dataRoot": "//www.pawsforabeer.com/site-data/",
            "contentRoot": "//www.pawsforabeer.com/asset"
        },
        "relative": {
            "font": "/font/",
            "image": "/image/"
        }
    },
    "resources": {
        "contentRoot": "resources/asset",
        "dataRoot": "resources/site-data",
        "fontRoot": "resources/asset/font",
        "favicon": {
            "src": "resources/favicon.png",
            "background": "#449FC3",
            "title": "Paws for a Beer"
        }
    },
    "server": {
        "htaccess": "resources/.htaccess"
    }
}
